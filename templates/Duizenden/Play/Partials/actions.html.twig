{% set active_player = get_player_from_state_data(state_data, current_player_id) %}
<div id="actions-pane">
    <div id="actions-current-player">
        <span id="actions-current-player-text">{{ current_player_id == player.id ? 'Your turn' : active_player.name ~ '\'s turn' }}</span>
    </div>
    <div id="actions-pane-items">
        <div id="actions-actions">
            <div id=actions-buttons>
                <div><a class="button hidden" id="deal"><span class="deal"></span> <span>Deal cards</span></a></div>
                <div><a class="button hidden" id="restart" href="{{ path('duizenden.new') }}"><span class="restart"></span> <span>Restart</span></a></div>
                <div><a class="button hidden" onclick="undoLastAction(); return false;"><span class="undo"></span> <span>Undo</span></a></div>
                <div><a class="button hidden" id="meld-button" onclick="meld()"><span class="meld"></span> <span>Meld cards</span></a></div>
            </div>
        </div>
        <div id="actions-description">
            {% if player.id == current_player_id %}
            <div id="allowed-actions">
                {% for action in state_data.allowed_actions %}
                    <div class="allowed-action"><span class="allowed-action-bullet">‚óè</span>&nbsp;<span class="allowed-action-text">{{ action.description }}</span></div>
                {% endfor %}
            </div>
            {% else %}
               Please wait for your turn.
            {% endif %}
        </div>
    </div>
</div>